<?xml version="1.0" ?>

<robot name="robokoko_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find slam_project)/urdf/robokoko_scratch.gazebo" />

	<!-- Link robot footprint --> 
  <link name="robot_footprint"/>

	<!-- Link chassis --> 
  <link name="chassis_link">

		<visual>
      <geometry>
      	<cylinder length="0.1" radius="0.3"/>
      </geometry>
    </visual>

    <collision name="collision">
      <geometry>
        <cylinder length="0.1" radius="0.3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <inertia 	ixx="0.35" ixy="0" ixz="0" 
								iyy="0.35" iyz="0"
						 		izz="0.675"/>
    </inertial>

  </link>

	<!-- Link Front Caster --> 
	<link name='front_caster_link'>

		<visual>
		  <geometry>
				<sphere radius="0.075"/>
		  </geometry>
		</visual>

		<collision name='front_caster_collision'>
		  <geometry>
				<sphere radius="0.075"/>
		  </geometry>
		</collision>

		<inertial>
			<mass value=".250"/>
			<inertia
			  ixx="0.000703125" ixy="0" ixz="0"
			  iyy="0.000703125" iyz="0"
			  izz="0.000703125"
			/>
		</inertial>

	</link>

	<!-- Link Back Caster --> 
	<link name='back_caster_link'>

		<visual>
		  <geometry>
				<sphere radius="0.075"/>
		  </geometry>
		</visual>

		<collision name='back_caster_collision'>
		  <geometry>
				<sphere radius="0.075"/>
		  </geometry>
		</collision>

		<inertial>
			<mass value=".250"/>
			<inertia
			  ixx="0.000703125" ixy="0" ixz="0"
			  iyy="0.000703125" iyz="0"
			  izz="0.000703125"
			/>
		</inertial>

	</link>

	<!-- Link Left Wheel --> 
	<link name='left_wheel_link'>

		<visual>
			<origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder radius="0.15" length="0.1"/>
			</geometry>
		</visual>

		<collision name='collision'>
			<origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder radius="0.15" length="0.1"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="10.0"/>
			<origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
				<inertia
			  ixx="0.0646" ixy="0" ixz="0"
			  iyy="0.0646" iyz="0"
			  izz="0.1125"
			/>
		</inertial>

	</link>

	<!-- Link Right Wheel --> 
	<link name='right_wheel_link'>

		<visual>
			<origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder radius="0.15" length="0.1"/>
			</geometry>
		</visual>

		<collision name='collision'>
			<origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder radius="0.15" length="0.1"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="10.0"/>
			<origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
				<inertia
			  ixx="0.0646" ixy="0" ixz="0"
			  iyy="0.0646" iyz="0"
			  izz="0.1125"/>
		</inertial>

	</link>

	<!-- Link Body --> 
	<link name='body_link'>

		<visual>
		  <geometry>
				<cylinder length="0.8" radius="0.1"/>
		  </geometry>
		</visual>

		<collision name='body_collision'>
		  <geometry>
				<cylinder length="0.65" radius="0.1"/>
		  </geometry>
		</collision>

		<inertial>
			<mass value="0.1"/>
			<inertia
			  ixx="0.00558" ixy="0" ixz="0"
			  iyy="0.00558" iyz="0"
			  izz="0.00050"
			/>
		</inertial>

	</link>

	<!-- Link Camera --> 
	<link name='camera_link'>

		<visual>
			<geometry>
				<box size="0.025 0.25 0.025"/>
			</geometry>
		</visual>

		<collision name='collision'>
			<geometry>
				<box size="0.025 0.25 0.025"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="0.05"/>
			<inertia
			  ixx="1e-6" ixy="0" ixz="0"
			  iyy="1e-6" iyz="0"
			  izz="1e-6"
			/>
		</inertial>

	</link>

	<!-- Link RGB-D  --> 
	<link name='camera_rgbd_frame'></link>

	<link name='imu_link'></link>

	<!-- Link Lidar  --> 
	<link name='hokuyo'>

		<visual>
			<geometry>
				<mesh filename="package://slam_project/meshes/hokuyo.dae"/>	
			</geometry>
		</visual>

		<collision name='collision'>
			<origin xyz="0.0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.1 0.1"/>
			</geometry>
		</collision>

		<inertial>
			<mass value="0.05"/>
			<origin xyz="0.0 0 0" rpy="0 0 0"/>
			<inertia
			  ixx="1e-6" ixy="0" ixz="0"
			  iyy="1e-6" iyz="0"
			  izz="1e-6"
			/>
		</inertial>

	</link>

	<!-- Joint Robot footprint  --> 
  <joint name="robot_footprint_joint" type="fixed">
	  <origin xyz="0 0 0.15" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis_link"/>
  </joint>

	<!-- Joint left wheel  --> 
	<joint name="left_wheel_joint" type="continuous" >
		<origin xyz="0 0.35 0" rpy="0 0 0"/>
		<axis xyz="0 1 0" />
		<parent link="chassis_link"/>
		<child link="left_wheel_link"/>
	</joint>

	<!-- Joint right wheel  --> 
	<joint name="right_wheel_joint" type="continuous" >
    <origin xyz="0 -0.35 0" rpy="0 0 0"/>
		<axis xyz="0 1 0" />	
		<parent link="chassis_link"/>
		<child link="right_wheel_link"/>
	</joint>

	<!-- Joint front caster  --> 
	<joint name="front_caster_joint" type="fixed" >
		<origin xyz="0.22 0 -0.075" rpy="0 0 0"/>
		<parent link="chassis_link"/>
		<child link="front_caster_link"/>
	</joint>

	<!-- Joint back caster  --> 
	<joint name="back_caster_joint" type="fixed" >
		<origin xyz="-0.22 0 -0.075" rpy="0 0 0"/>
		<parent link="chassis_link"/>
		<child link="back_caster_link"/>
	</joint>

	<!-- Joint body  --> 
	<joint name="body_joint" type="fixed" >
		<origin xyz="0 0 0.45" rpy="0 0 0"/>
		<parent link="chassis_link"/>
		<child link="body_link"/>
	</joint>

	<!-- Joint lidar  --> 
	<joint name="lidar_joint" type="fixed" >
    <origin xyz="0 0 0.435" rpy="0 0 0"/>
		<parent link="body_link"/>
		<child link="hokuyo"/>
	</joint>

	<!-- Joint camera  --> 
	<joint name="camera_joint" type="fixed" >
    <origin xyz="0.11 0 0.2" rpy="0 0 0"/>
		<parent link="body_link"/>
		<child link="camera_link"/>
	</joint>

	<!-- Joint camera rgbd  --> 
	<joint name="camera_rgbd_joint" type="fixed" >
		<parent link="camera_link"/>
		<child link="camera_rgbd_frame"/>
		<origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
	</joint>

	<!-- Joint Imu  --> 
	<joint name="imu_joint" type="fixed" >
		<parent link="body_link"/>
		<child link="imu_link"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>



</robot>

